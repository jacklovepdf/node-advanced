{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "globals": {
    "logger": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "standard",
  "rules": {
    "eqeqeq": "off",
    "no-use-before-define": "off",
    "no-console": ["error", {
      "allow": ["log", "warn", "error", "info", "group", "groupEnd"]
    }],
    "max-depth": [2, 10],
    "no-empty-function": "off",
    "indent": ["error", 4],
    "no-empty": "off",
    "no-return-await": "off",
    "camelcase": "off",
    "prefer-promise-reject-errors": "off",
    "promise/param-names": "off",
    "one-var": "off",
    "no-useless-escape": "off",
    "handle-callback-err": "off",
    "standard/no-callback-literal": "off",
    "no-tabs": "off",
    "semi": [0]
  }
}
